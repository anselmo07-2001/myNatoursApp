header.header
    nav.nav.nav--tours
        a(href='/').nav__el All tours
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        //- show this when user login
        //- a(href='#').nav__el My bookings 
        //- a(href='#').nav__el
        //-     img(src='img/user.jpg' alt='User photo').nav__user-img
        //-     span Anselmo 
        if user 
            a(href='/').nav__el.nav__el--logout Log out
            a(href='/me').nav__el
                img(src=`/img/users/${user.photo}` alt=`${user.name}`).nav__user-img
                span= user.name.split(" ")[0]
        else 
            a(href='/login').nav__el Login
            button.nav__el.nav__el--cta Sign up